                        <ImageView
                            android:id="@+id/image12"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pointer2"
                           />

                        <ImageView
                            android:id="@+id/image13"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pointer2"
                           />



                        <ImageView
                            android:id="@+id/image14"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pointer2" />

                        <ImageView
                            android:id="@+id/imagedidi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/diiheart" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
        <RelativeLayout
            android:id="@+id/linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/diii"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="-50dp"
                    android:background="#FFF50A"
                    android:src="@drawable/diiiiipic" />

            <TextView
                android:id="@+id/dc"
                android:layout_width="306dp"
                android:layout_height="95dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-46dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@+id/diii"
                android:background="@drawable/yellowbg"
                android:backgroundTint="#FFF50C"
                android:fontFamily="@font/calligraffitti"
                android:scaleType="fitCenter"
                android:text="May You Have a Happy and Prosperous Married Life :- Friends and Family"
