                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pointer2"
                         />

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pointer2"
                           />

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/pointer2"
                           />

                        <ImageView
                            android:id="@+id/image5"
                            android:layout_width="35dp"
