<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/yellowbg"
    tools:context=".fragments.emotion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linear_layout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:id="@+id/jijaji"
            android:layout_marginStart="-40dp"
            android:layout_height="match_parent"
            android:src="@drawable/jijaji"/>

        <TextView
            android:id="@+id/jc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-35dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/jijaji"
            android:fontFamily="@font/calligraffitti"
            android:scaleType="fitCenter"
            android:text="May You Have a Happy and Prosperous Married Life :- Friends and Family"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:layout_marginTop="100dp"-->
        <!--android:layout_marginBottom="-40dp">-->
